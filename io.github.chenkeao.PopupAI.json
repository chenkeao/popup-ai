{
    "app-id": "io.github.chenkeao.PopupAI",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "popup-ai",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--share=network",
        "--talk-name=org.freedesktop.secrets",
        "--own-name=io.github.chenkeao.PopupAI",
        "--filesystem=xdg-config/popup-ai:create",
        "--filesystem=xdg-data/popup-ai:create",
        "--filesystem=xdg-run/popup-ai:create"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "python3-requirements.json",
        {
            "name": "popup-ai",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}